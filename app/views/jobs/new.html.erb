<%= link_to 'Home', root_path, :class => 'button back' %>
<br />
<br />
<%= form_for(@job, :url => { :action => :review }) do |f| %>
  <h1>Let's get started</h1>
  <p>Your job listing will remain on this site for 30 days. After 30 days your job listing will expire and be removed. You can always post the job again by filling out this form and making the $25 payment for an additional 30 days.
  </p>

  <div class="field">
    <%= f.label :job_title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, options_for_select(category_selects, @job.category), :name=>'category', :id=>'category' %>
  </div>

   <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select(us_states, @job.state), :name=>'state', :id=>'state' %>
  </div>

   <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :how_to_apply %><br>
    <%= f.text_area :how_to_apply %>
  </div>

  <div class="field">
    <%= f.label :company_description %><br>
    <%= f.text_field :company_description %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :company_url %><br>
    <%= f.text_field :company_url %>
  </div>

  <div class="field">
    <%= f.label :company_email %><br>
    <%= f.text_field :company_email %>
  </div>

  <div class="actions">
    <%= f.submit 'Preview your job posting', :class => 'forward' %>
  </div>
<% end %>

